<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/applyUserMemberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="6sp"
        android:text="참석인원"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/applyUserMember"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/textview_round_corner"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="6"
        android:inputType="number"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6sp"
        android:textColor="#7f7f7f"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/applyUserMemberCountTitle"
        app:layout_constraintStart_toStartOf="@+id/applyUserMemberTitle"
        app:layout_constraintTop_toBottomOf="@+id/applyUserMemberTitle" />

    <TextView
        android:id="@+id/applyUserMemberCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="6sp"
        android:text="명"
        android:textColor="#404040"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/applyUserMember"
        app:layout_constraintStart_toEndOf="@+id/applyUserMember" />

    <Button
        android:id="@+id/applyUserButton"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="72dp"
        android:text="확인"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="#000000"
        android:lineSpacingExtra="7sp"
        android:gravity="center"
        android:background="@color/colorPoint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applyUserMember" />

</androidx.constraintlayout.widget.ConstraintLayout>